<section id="contact-hero">
    <div id="contact-title-scribble">
        <h1 class="hero-h1">Contact Us</h1>
        <p class="hero-subtext">Looking for more info? <br>Fill out the form below!</p>
        <img src="img/Contact/contactscribble.png" class="hero-scribble">
    </div>
</section>

<section id="contact-forms" class="content-spacing">
    <div>
        <img src="img/Contact/scribtop.png" id="scribtop">
        <img src="img/Contact/arrow.png" id="arrow">

        <section id="contact-button-section">
            <section id="button-container">
                <button class="green-button" id="contact-us-btn">Contact Us <i class="far fa-ellipsis-v"></i></button>

                <section id="contact-options">
                    <ul>
                        <li><a href="mailto:safijeff@me.com"><i class="far fa-envelope"></i>Email</a></li>
                        <li><button id="show-form-btn"><i class="fas fa-align-left"></i>Contact Form</button></li>
                    </ul>
                </section>
            </section>
        </section>

        <section id="form-container">
            <form action="https://formspree.io/xdowpwnv" method="POST">
                <section>
                    <input type="text" placeholder="Name" name="Name">
                </section>
                <section>
                    <input type="tel" placeholder="Phone" name="Phone">
                </section>
                <section>
                    <input type="email" placeholder="Email" name="Email">
                </section>
                <section>
                    <textarea placeholder="Message" name="Message"></textarea>
                </section>
                <section>
                    <button class="green-button" type="submit">Send</button>
                </section>

            </form>

        </section>


    </div>

</section>